<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HomeAutomationApp.Login"
			 Title="Log in">
	<ContentPage.Content>
	</ContentPage.Content>

	<StackLayout VerticalOptions = "LayoutOptions.Center" 
	Spacing = "20" Padding = "50">

		<Entry 
		x:Name="UserField"
		Placeholder = "Username" />

		<Entry
		x:Name="PassField"
		Placeholder = "Password" 
		IsPassword = "true" />

		<Button
		x:Name="ClickButton"
		Text = "Login"
		TextColor = "White"
		BackgroundColor = "#77D065" />

		<Button
		x:Name="RegisterButton"
		Text = "Register"
		TextColor = "White"
		BackgroundColor = "#77D065" />

		<Label
		x:Name="Text"
		Text = "Login"
		TextColor = "#77D065" />

	</StackLayout>
</ContentPage>
